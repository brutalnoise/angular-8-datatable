{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "outDir": "../lib",
    "declaration": true,
    "typeRoots": [
      "../node_modules/@types"
    ],
    "lib": [
      "dom",
      "es2015"
    ]
  },
  "angularCompilerOptions": {
    "genDir": "../aot",
    "skipMetadataEmit": false
  },
  "include": [
    "src/",
    "../src/DataTableModule.ts",
    "../src/DefaultSorter.ts",
    "../src/Paginator.ts",
    "../src/BootstrapPaginator.ts",
    "../src/DataTableModule.ts",
    "../src/DataTableModule",
    "../src/DefaultSorter",
    "../src/Paginator",
    "../src/BootstrapPaginator",
    "../src/DataTableModule"
  ],
  "exclude": [
    "node_modules/"
  ]
  
}

